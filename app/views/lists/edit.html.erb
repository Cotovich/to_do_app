<h1 class="mt-6 text-center text-3xl text-gray-900">Edit <%= @list.name %> name</h1>

<%= form_with(url: "/lists/#{@list.id}", method: :patch, data: { turbo: false } ) do |form| %>
  <%= form.label :name, class: "sr-only" %>
  <%= form.text_field :name, autofocus: true, class: "appearance-none rounded-lg relative block w-full px-3 py-2 mb-6 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", placeholder: "#{@list.name}" %> 

  <%= form.submit "Edit list name", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
<% end %>