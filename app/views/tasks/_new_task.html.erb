<%= form_with(url: "/tasks", method: "POST", data: { turbo_frame: "tasks" }) do |form| %>
  <%= form.hidden_field :list, value: @list.id %> <!-- Добавить передачу сюда текущего активного списка, отправлять при создании -->
  <%= form.hidden_field :user_id, value: current_user.id %>
  <%= form.label :name, class: "sr-only" %>
  <%= form.text_field :name, class: "appearance-none rounded-lg relative block w-full px-3 py-2 mb-6 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", placeholder: "Task name" %>
  <%= form.label :body, class: "sr-only" %>
  <%= form.text_field :body, class: "appearance-none rounded-lg relative block w-full px-3 py-2 mb-6 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", placeholder: "Description" %>
  <%= form.submit "Create task", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
<% end %>